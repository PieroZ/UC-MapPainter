<Window x:Class="UC_MapPainter.WorldSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select World" Height="150" Width="300" WindowStyle="ToolWindow">
    <StackPanel Margin="10">
        <TextBlock Text="Select a World:" Margin="0,0,0,10"/>
        <ComboBox Name="WorldComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="World 1"/>
            <ComboBoxItem Content="World 3"/>
            <ComboBoxItem Content="World 4"/>
            <ComboBoxItem Content="World 5"/>
            <ComboBoxItem Content="World 7"/>
            <ComboBoxItem Content="World 8"/>
            <ComboBoxItem Content="World 9"/>
            <ComboBoxItem Content="World 10"/>
            <ComboBoxItem Content="World 11"/>
            <ComboBoxItem Content="World 12"/>
            <ComboBoxItem Content="World 13"/>
            <ComboBoxItem Content="World 15"/>
            <ComboBoxItem Content="World 16"/>
            <ComboBoxItem Content="World 17"/>
            <ComboBoxItem Content="World 18"/>
            <ComboBoxItem Content="World 20"/>
        </ComboBox>
        <Button Content="OK" Click="OKButton_Click" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
