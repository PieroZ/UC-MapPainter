<Window x:Class="UC_MapPainter.WorldSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select World" Height="150" Width="300" WindowStyle="ToolWindow">
    <StackPanel Margin="10">
        <TextBlock Text="Select a World:" Margin="0,0,0,10"/>
        <ComboBox Name="WorldComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
            <ComboBoxItem Content="13"/>
            <ComboBoxItem Content="15"/>
            <ComboBoxItem Content="16"/>
            <ComboBoxItem Content="17"/>
            <ComboBoxItem Content="18"/>
            <ComboBoxItem Content="20"/>
        </ComboBox>
        <Button Content="OK" Click="OKButton_Click" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
